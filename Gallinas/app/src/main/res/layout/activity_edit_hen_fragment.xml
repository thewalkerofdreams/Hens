<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FDEBD0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:text="Name: "></TextView>

        <EditText
            android:id="@+id/EditTextNombreGallina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:minWidth="90sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:text="Pedigree: "></TextView>

        <EditText
            android:id="@+id/EditTextPedigriGallina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:minWidth="90sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:text="Weight: "></TextView>

        <EditText
            android:id="@+id/EditTextPesoGallina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:minWidth="50sp"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:text="height: "></TextView>

        <EditText
            android:id="@+id/EditTextAlturaGallina"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:minWidth="50sp"></EditText>

        <Button
            android:id="@+id/btnModHen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Update Hen"
            android:layout_margin="5sp"></Button>
    </LinearLayout>

</LinearLayout>